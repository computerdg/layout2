<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_margin="25dp">

    <!-- Routine Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="오늘의 루틴"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/note_background"
        android:padding="12dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"/>

    <!-- Exercise List -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#E0E0E0"
        android:padding="8dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="가슴"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/custom_background"
            android:padding="8dp"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="벤치프레스 10회 x 4set"
            android:textSize="15dp"
            android:textStyle="bold"
            android:padding="8dp"
            android:gravity="center_vertical"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#E0E0E0"
        android:padding="8dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="하체"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/custom_background"
            android:padding="8dp"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="스쿼트 15회 x 5set"
            android:textSize="15dp"
            android:textStyle="bold"
            android:padding="8dp"
            android:gravity="center_vertical"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#E0E0E0"
        android:padding="8dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="삼두"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/custom_background"
            android:padding="8dp"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="케이블 푸쉬다운 10회 x 5set"
            android:textSize="13dp"
            android:textStyle="bold"
            android:padding="8dp"
            android:gravity="center_vertical"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:padding="8dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="유산소"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/custom_background"
            android:padding="8dp"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="러닝머신 40분"
            android:textSize="15dp"
            android:textStyle="bold"
            android:padding="8dp"
            android:gravity="center_vertical"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

<!--    &lt;!&ndash; Feedback Memo &ndash;&gt;
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="피드백 메모"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginBottom="4dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="기구 세팅 수정 -> 3칸이 더 편함\n무게 증량 성공, 1RM 150kg 성공"
        android:background="#E0E0E0"
        android:padding="10dp"
        android:gravity="top|start"
        android:layout_marginBottom="16dp"/>-->

    <!-- Search Equipment Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:weightSum="2">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="기구 검색"
            android:textStyle="bold"
            android:drawableLeft="@android:drawable/ic_menu_search"
            android:background="@drawable/rounded_button"
            android:padding="12dp"
            android:textColor="@color/white"
            android:layout_margin="5dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/restTimer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="휴식 타이머"
            android:textStyle="bold"
            android:drawableLeft="@android:drawable/ic_menu_recent_history"
            android:background="@drawable/rounded_button"
            android:padding="12dp"
            android:layout_margin="5dp"
            android:textColor="@color/white"/>
    </LinearLayout>

    <!-- Complete Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_routineFin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="루틴 완료"
        android:textSize="18dp"
        android:textStyle="bold"
        android:background="@drawable/rounded_button"
        android:padding="12dp"
        android:textColor="@color/white"/>
</LinearLayout>
