<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="루틴 운동 설정"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="16dp"/>

    <!-- 월요일 루틴 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/box_background"
        android:padding="16dp"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="24dp">

        <TextView
            android:id="@+id/tv_monday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_gravity="left"
            android:text="월요일"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <!-- 월요일 루틴 내용 -->
        <TextView
            android:id="@+id/tv_monday_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="펙덱 플라이 10회 x 4set\n레그 프레스 15회 x 5set\n로잉 30분"
            android:textSize="16dp"
            android:background="#E0E0E0"
            android:padding="8dp"
            android:textColor="@android:color/black" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/box_background"
        android:padding="16dp"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tv_tuesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_gravity="left"
            android:text="수요일"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />


        <TextView
            android:id="@+id/tv_tuesday_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="벤치프레스 10회 x 4set\n스쿼트 15회 x 5set\n케이블 푸쉬다운 10회 x 5set\n러닝 40분"
            android:textSize="16dp"
            android:background="#E0E0E0"
            android:padding="8dp"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <!-- 금요일 루틴 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/box_background"
        android:padding="16dp"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tv_friday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="금요일"
            android:layout_gravity="left"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <!-- 금요일 루틴 내용 -->
        <TextView
            android:id="@+id/tv_friday_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="랫풀다운 20회 x 4set\n덤벨 킥백 10회 x 5set\n싸이클 30분"
            android:textSize="16dp"
            android:background="#E0E0E0"
            android:padding="8dp"
            android:textColor="@android:color/black" />
    </LinearLayout>


</LinearLayout>